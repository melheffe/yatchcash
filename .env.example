#========================================
# YachtCash - Single Environment Config
#========================================

#----------------
# Development
#----------------
NODE_ENV=development

#----------------
# Database
#----------------
DATABASE_URL="postgresql://postgres:password@localhost:5432/yachtcash_dev"

#----------------
# API Server
#----------------
API_PORT=3001
API_HOST=localhost

#----------------
# Frontend Ports
#----------------
ADMIN_PANEL_PORT=3000
CAPTAIN_PWA_PORT=3002

#----------------
# Security
#----------------
JWT_SECRET="yachtcash-dev-jwt-secret-2024-maritime-system"
JWT_EXPIRES_IN="7d"
BCRYPT_ROUNDS=12

#----------------
# File Upload
#----------------
UPLOAD_DIR="./packages/api/uploads"
MAX_FILE_SIZE=10485760

#----------------
# External APIs
#----------------
EXCHANGE_RATE_API_KEY=""

#----------------
# Email (Optional)
#----------------
SMTP_HOST=""
SMTP_PORT=587
SMTP_USER=""
SMTP_PASS=""

#----------------
# Docker (Optional)
#----------------
POSTGRES_DB=yachtcash_dev
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_PORT=5432
